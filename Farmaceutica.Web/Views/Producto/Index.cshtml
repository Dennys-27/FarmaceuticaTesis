@using Farmaceutica.Core.Enums   // si tu enum está en esa carpeta
@using Farmaceutica.Core.Entities
@{
    ViewData["Title"] = "Producto Mantenedor";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<style>
    /* Borde azul alrededor de toda la tabla */
    .tabla-borde {
        border: 3px solid #0dcaf0; /* borde azul tipo info */
        border-radius: 8px; /* bordes redondeados */
        overflow: hidden; /* que las celdas no salgan del borde */
        box-shadow: 2px 2px 8px rgba(0,0,0,0.1); /* sombra ligera */
        padding: 10px;
    }

        /* Opcional: resaltar fila al pasar el mouse */
        .tabla-borde tbody tr:hover {
            background-color: rgba(13, 202, 240, 0.1);
        }

</style>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Mantenimiento Producto</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Producto</a></li>
                    <li class="breadcrumb-item active">Producto</li>
                </ol>
            </div>

        </div>
    </div>

    <div class="col-lg-12">
        <div class="card">
            <div class="card shadow-sm p-3 rounded-4">
                <div class="row gy-3 align-items-end">
                    <!-- Categoría -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label fw-semibold">Categoría</label>
                        <select class="form-control form-select" name="CategoriaId" id="cat_id">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <!-- Subcategoría -->
                    <div class="col-md-6 col-lg-4">
                        <label class="form-label fw-semibold">Subcategoría</label>
                        <select class="form-control form-select" name="SubCategoriaId" id="scat_id">
                            <option value="">Seleccionar</option>
                        </select>
                    </div>

                    <!-- Botones -->
                    <div class="col-12 col-lg-4 d-flex flex-wrap gap-2 mt-2">
                        <button type="button" id="btnCargar" class="btn btn-success btn-label waves-effect waves-light rounded-pill flex-fill">
                            <i class="ri-upload-2-line label-icon align-middle rounded-pill fs-16 me-2"></i>
                            Cargar Archivo
                        </button>

                        <button type="button" id="btnProcesar" class="btn btn-warning btn-label waves-effect waves-light rounded-pill flex-fill">
                            <i class="ri-cpu-line label-icon align-middle rounded-pill fs-16 me-2"></i>
                            Procesar Datos
                        </button>

                        <button type="button" id="btnDescargar" class="btn btn-info btn-label waves-effect waves-light rounded-pill flex-fill">
                            <i class="ri-download-2-line label-icon align-middle rounded-pill fs-16 me-2"></i>
                            Descargar Formato
                        </button>
                    </div>
                </div>
            </div>
            <div id="contenedorTablaDetalle" style="display:none;">
                <div class="card-body">
                    <table id="table_dataDetalle" class="table table-bordered dt-responsive nowrap table-striped align-middle tabla-borde" style="width:100%; display:none;">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nombre</th>
                                <th>Descripcion</th>
                                <th>Precio</th>
                                <th>StockTotal</th>
                                <th>StockLocal</th>
                                <th>StockDelivery</th>
                                <th>Codigo</th>
                                <th>Categoria</th>
                                <th>SubCategoria</th>
                                <th>EstadoProducto</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>


            <div class="card-body">
                <table id="table_data" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nombre</th>
                            <th>Descripcion</th>
                            <th>Precio</th>
                            <th>StockTotal</th>
                            <th>StockLocal</th>
                            <th>StockDelivery</th>
                            <th>Codigo</th>
                            <th>Categoria</th>
                            <th>SubCategoria</th>
                            <th>Estado</th>
                            <th>FechaCreacion</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            

        </div>
    </div>
</div>

<div id="modalmantenimiento" class="modal fade" tabindex="-1" aria-labelledby="lbltitulo" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-4 border-0">

            <!-- Encabezado -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title fw-semibold text-white" id="lbltitulo">
                    Proceso de Carga de Archivo
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Cuerpo -->
            <form id="mantenimiento_form" enctype="multipart/form-data">
                <div class="modal-body">

                    <!-- Paso 1: Cargar Archivo -->
                    <div id="step1" class="step-content">
                        <h6 class="fw-bold mb-3"><i class="ri-upload-2-line text-success me-2"></i> Paso 1: Cargar Archivo</h6>
                        <div class="mb-3">
                            <label for="archivoExcel" class="form-label">Selecciona un archivo Excel (.xlsx o .xls)</label>
                            <input type="file" id="archivoExcel" name="archivoExcel" accept=".xlsx,.xls" class="form-control" required>
                        </div>
                        <div class="text-end">
                            <button type="button" id="btnLeerArchivo" class="btn btn-success rounded-pill">
                                <i class="ri-arrow-right-line me-2"></i>Leer Archivo
                            </button>
                        </div>
                    </div>

                    <!-- Paso 2: Procesar Datos -->
                    <div id="step2" class="step-content d-none">
                        <h6 class="fw-bold mb-3"><i class="ri-cpu-line text-warning me-2"></i> Paso 2: Procesar Datos</h6>
                        <div class="text-center py-4">
                            <i class="ri-loader-4-line ri-spin text-warning fs-1 mb-2"></i>
                            <p>Procesando los datos del archivo, por favor espera...</p>
                        </div>
                        <div class="text-end">
                            <button type="button" id="btnFinalizar" class="btn btn-warning rounded-pill">
                                <i class="ri-check-line me-2"></i>Finalizar Carga
                            </button>
                        </div>
                    </div>

                    <!-- Paso 3: Finalizado -->
                    <div id="step3" class="step-content d-none text-center py-4">
                        <i class="ri-checkbox-circle-line text-success fs-1 mb-2"></i>
                        <h6 class="fw-bold">Proceso Completado</h6>
                        <p>Los datos fueron cargados y procesados correctamente.</p>
                    </div>

                </div>

                <!-- Pie del Modal -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-light rounded-pill" data-bs-dismiss="modal">
                        <i class="ri-close-line me-1"></i> Cerrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div id="modalmantenimiento_producto" class="modal fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="lbltitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> </button>
            </div>

            <form method="post" id="mantenimiento_form_producto" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="prod_id" />
                    <div class="row gy-2">
                        <div class="col-md-12">
                            <div>
                                <label for="valueInput" class="form-label">Imagen</label>
                                <input type="file" class="form-control" id="prod_img" name="imagen" />
                            </div>
                        </div>
                    </div>

                    <br>

                    <div class="row gy-2">
                        <div class="col-md-12">
                            <div class="text-center">
                                <a id="btnremovephoto" class="btn btn-danger btn-icon waves-effect waves-light btn-sm"><i class="ri-delete-bin-5-line"></i></a>
                                <div class="profile-user position-relative d-inline-block mx-auto  mb-4">
                                    <span id="pre_imagen"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/producto.js"></script>
}