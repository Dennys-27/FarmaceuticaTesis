<!-- start contacto -->
<section class="section" id="contacto">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-5">
                    <h3 class="mb-3 fw-semibold">Contáctanos</h3>
                    <p class="text-muted mb-4 ff-secondary">
                        Nos entusiasma generar ideas innovadoras, pero también entendemos que un buen concepto debe ir acompañado de resultados medibles.
                    </p>
                </div>
            </div>
        </div>
        <!-- end row -->

        <div class="row gy-4">
            <div class="col-lg-4">
                <div>
                    <div class="mt-4">
                        <h5 class="fs-13 text-muted text-uppercase">Dirección Oficina 1:</h5>
                        <div class="ff-secondary fw-semibold">
                            4461 Calle Cedar, Moro, <br />AR 72368
                        </div>
                    </div>
                    <div class="mt-4">
                        <h5 class="fs-13 text-muted text-uppercase">Dirección Oficina 2:</h5>
                        <div class="ff-secondary fw-semibold">
                            2467 Calle Swick Hill <br />New Orleans, LA
                        </div>
                    </div>
                    <div class="mt-4">
                        <h5 class="fs-13 text-muted text-uppercase">Horario de Atención:</h5>
                        <div class="ff-secondary fw-semibold">
                            9:00 a.m. a 6:00 p.m.
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-lg-8">
                <div>
                    <form method="post" action="@Url.Action("Enviar", "Home")">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label for="Nombre" class="form-label fs-13">Nombre</label>
                                    <input name="Name" id="Name" type="text" class="form-control bg-light border-light"
                                           placeholder="Tu nombre*" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="mb-4">
                                    <label for="Email" class="form-label fs-13">Correo electrónico</label>
                                    <input name="Email" id="Email" type="email" class="form-control bg-light border-light"
                                           placeholder="Tu correo*" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-4">
                                    <label for="Asunto" class="form-label fs-13">Asunto</label>
                                    <input type="text" class="form-control bg-light border-light" id="Subject"
                                           name="Subject" placeholder="Tu asunto..." required />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="mb-3">
                                    <label for="Mensaje" class="form-label fs-13">Mensaje</label>
                                    <textarea name="Comments" id="Comments" rows="3" class="form-control bg-light border-light"
                                              placeholder="Tu mensaje..." required></textarea>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12 text-end">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>Enviar Mensaje
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- end row -->
    </div>
    <!-- end container -->
</section>
<!-- end contacto -->
